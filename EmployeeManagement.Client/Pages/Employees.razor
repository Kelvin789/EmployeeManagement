@page "/employees"
@inject NavigationManager Nav

<h1>Employee Overview</h1>

<p>This page contains all the employees available in the system.</p>

<div>
    <button @onclick="AddEmployee" type="button" class="btn btn-primary" title="Add Employee" style="float:left">
        <i class="fa-solid fa-user-plus m-2"></i>Add Employee
    </button>
</div>

<br />

<EmployeeList></EmployeeList>

@code {
    void AddEmployee()
    {
        Nav.NavigateTo("AddEmployee");
    }
}
